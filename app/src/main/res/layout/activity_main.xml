<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTic"
        style="@style/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/tic"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textViewTac"
        style="@style/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:background="@android:color/transparent"
        android:text="@string/tac"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTic"
        app:layout_constraintStart_toStartOf="@+id/textViewTic"
        app:layout_constraintTop_toBottomOf="@+id/textViewTic"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewToe"
        style="@style/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:background="@android:color/transparent"
        android:text="@string/toe"
        android:textColor="?attr/colorSecondaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTac"
        app:layout_constraintStart_toStartOf="@+id/textViewTac"
        app:layout_constraintTop_toBottomOf="@+id/textViewTac"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonPlayerNames"
        style="@style/buttonPrimary"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/addPlayer"
        android:textColor="?attr/android:background"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNewGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewToe"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/buttonNewGame"
        style="@style/buttonPrimary"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/playGame"
        android:textColor="?attr/android:background"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonStandings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlayerNames" />

    <Button
        android:id="@+id/buttonStandings"
        style="@style/buttonPrimary"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/standings"
        android:textColor="?attr/android:background"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNewGame" />

    <Button
        android:id="@+id/buttonSettings"
        style="@style/buttonPrimary"
        android:layout_height="64dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/settings"
        android:textColor="?attr/android:background"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStandings" />

</androidx.constraintlayout.widget.ConstraintLayout>