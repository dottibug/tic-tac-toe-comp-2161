<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagePlayersActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewManagePlayers"
                style="@style/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="@string/managePlayers"
                android:textColor="?attr/colorPrimary" />

            <Button
                android:id="@+id/buttonResetStats"
                style="@style/buttonPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/resetStats"
                android:textColor="?attr/android:background" />

            <Button
                android:id="@+id/buttonDeletePlayer"
                style="@style/buttonPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/deletePlayer"
                android:textColor="?attr/android:background" />

            <Button
                android:id="@+id/buttonDeleteAllPlayers"
                style="@style/buttonPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/deleteAllPlayers"
                android:textColor="?attr/android:background" />

            <Button
                android:id="@+id/buttonManagePlayersBackToStats"
                style="@style/buttonPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:backgroundTint="?attr/colorSecondary"
                android:text="@string/backToStats"
                android:textColor="?attr/android:background" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>