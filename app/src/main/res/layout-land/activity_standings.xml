<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp"
    tools:context=".StandingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewStandingsTitle"
                style="@style/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/bagel_fat_one"
                android:text="@string/standings"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorPrimary"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/textViewPlayer"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/player"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewTotal"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/total"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewLosses"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/losses"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewTies"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/ties"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewWins"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/wins"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewWinPercentage"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/winPercentage"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewLastPlayed"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/lastPlayed"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/snow"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listViewStandings"
                        android:layout_width="wrap_content"
                        android:layout_height="190dp"
                        android:background="@android:color/transparent"
                        android:maxHeight="290dp"
                        tools:layout_height="150dp"
                        tools:listitem="@layout/custom_list_item" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonStandingsHome"
                    style="@style/buttonPrimary"
                    android:layout_width="0dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorSecondary"
                    android:text="@string/buttonHome"
                    android:textColor="?attr/android:background" />

                <Button
                    android:id="@+id/buttonManagePlayers"
                    style="@style/buttonPrimary"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/colorPrimary"
                    android:text="@string/managePlayers"
                    android:textColor="?attr/android:background" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>